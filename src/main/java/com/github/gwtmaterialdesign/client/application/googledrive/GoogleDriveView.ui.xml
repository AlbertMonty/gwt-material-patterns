<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:m.addins="urn:import:gwt.material.design.addins.client.ui">
    <ui:style>
        @external side-nav, active;
        body{
            background-color: #e9e9e9;
            overflow: scroll !important;
        }
        .side-nav li.active{
            border-left: 4px solid #757575;
        }
        .bordered{
            border-left: 2px solid #e9e9e9;
        }
        .animation{
            transition: 0.4s all;
            -webkit-transition: 0.4s all;
            -moz-transition: 0.4s all;
        }
    </ui:style>
    <m:MaterialPanel>
        <!-- Header Section -->
        <m:MaterialHeader depth="996" layoutPosition="FIXED" width="100%">
            <!-- NavBar Component -->
            <m:MaterialNavBar ui:field="appNav" backgroundColor="grey darken-1" activates="sidenav">
                <m:MaterialNavBrand text="Drive" />

                <m:MaterialNavSection float="RIGHT" hideOn="NONE">
                    <m:MaterialLink text="Drive" iconPosition="RIGHT" marginRight="20" iconType="ARROW_DROP_DOWN" textColor="white" activates="dpDrive" float="LEFT">
                        <m:MaterialDropDown activator="dpDrive" belowOrigin="true" constrainWidth="false">
                            <m:MaterialLink text="Link 1" iconType="FOLDER" textColor="grey darken-1"/>
                            <m:MaterialLink text="Link 1" iconType="FOLDER_SHARED" textColor="grey darken-1"/>
                            <m:MaterialLink text="Link 1" iconType="FOLDER_SPECIAL" textColor="grey darken-1"/>
                            <m:MaterialLink text="Link 1" iconType="FOLDER_OPEN" textColor="grey darken-1"/>
                        </m:MaterialDropDown>
                    </m:MaterialLink>
                    <m:MaterialIcon ui:field="btnSearch" iconType="SEARCH" marginRight="20" />
                    <m:MaterialIcon iconType="SORT_BY_ALPHA" marginRight="20" />
                    <m:MaterialIcon ui:field="iconInfo" iconType="INFO" marginRight="20" />
                    <m:MaterialIcon iconType="SETTINGS" marginRight="20" />
                </m:MaterialNavSection>
            </m:MaterialNavBar>

            <!-- Search Component -->
            <m:MaterialNavBar ui:field="searchNav" backgroundColor="white" visible="false">
                <m:MaterialSearch ui:field="search" placeholder="Search Drive" active="true"/>
            </m:MaterialNavBar>
        </m:MaterialHeader>

        <!-- SideNav Component -->
        <m:MaterialSideNav m:id="sidenav" type="FLOAT" width="240" layoutPosition="FIXED">
            <m:MaterialLink iconType="FOLDER" text="My Drive" />
            <m:MaterialLink iconType="SHARE" text="Shared with me" />
            <m:MaterialLink iconType="GROUP" text="Groups" />
            <m:MaterialLink iconType="RADIO_BUTTON_ON" text="Circles" />
            <m:MaterialLink iconType="FIND_IN_PAGE" text="Find Duplicates" />
            <m:MaterialLink iconType="MORE" text="More" />

            <!-- Some components -->
            <m:MaterialPanel textAlign="CENTER">
                <m:MaterialLabel text="Copyright @ Drive 2016" textColor="grey darken-1"/>
                <m:MaterialButton text="Get Drive for PC" backgroundColor="grey darken-1" textColor="white" />
            </m:MaterialPanel>

        </m:MaterialSideNav>

        <!-- Container -->
        <m:MaterialContainer paddingLeft="240" paddingTop="64">
            <m:MaterialRow layoutPosition="RELATIVE">
                <m:MaterialRow ui:field="mainPanel" backgroundColor="white" layoutPosition="RELATIVE" marginBottom="0" grid="l9" padding="20" addStyleNames="{style.animation}">
                    <m:MaterialRow ui:field="mainHeader" marginBottom="0" paddingLeft="40" addStyleNames="{style.animation}">
                        <m:MaterialLink text="Name" iconType="ARROW_UPWARD" iconPosition="LEFT" fontWeight="BOLD" grid="l5" textColor="grey darken-1"/>
                        <m:MaterialLink text="Shared by" grid="l4" textColor="grey darken-1"/>
                        <m:MaterialLink text="Share date" grid="l3" textColor="grey darken-1"/>
                    </m:MaterialRow>
                    <m:MaterialCollapsible ui:field="driveColaps" marginTop="20" padding="0"/>
                </m:MaterialRow>

                <m:MaterialPanel ui:field="rightPanel" grid="l3" padding="0" backgroundColor="white" height="100%" layoutPosition="FIXED" top="64" right="-40" paddingRight="40" addStyleNames="{style.bordered} {style.animation}">
                    <!-- Header Info -->
                    <m:MaterialRow paddingTop="20">
                        <m:MaterialIcon ui:field="iconViewFile" iconSize="MEDIUM" iconColor="grey darken-1" grid="l4"/>
                        <m:MaterialLabel ui:field="lblViewFile" marginTop="16" fontSize="1.4em" textColor="grey darken-1" grid="l6"/>
                        <m:MaterialIcon ui:field="iconClose" iconType="CLOSE" marginTop="16" grid="l2" float="RIGHT"/>
                    </m:MaterialRow>
                    <m:MaterialDivider width="100%" height="2px"/>
                    <!-- Tabs -->
                    <m:MaterialRow>
                        <m:MaterialTab backgroundColor="white">
                            <m:MaterialTabItem><m:MaterialLink text="Details" textColor="grey darken-1" waves="DEFAULT"/></m:MaterialTabItem>
                            <m:MaterialTabItem><m:MaterialLink text="Activity" textColor="grey darken-1" waves="DEFAULT"/></m:MaterialTabItem>
                        </m:MaterialTab>
                    </m:MaterialRow>
                    <!-- Users -->
                    <m:MaterialRow>
                        <m:MaterialImage url="https://s3.amazonaws.com/uifaces/faces/twitter/tonymillion/128.jpg" width="40px" shadow="1" height="40px" circle="true" float="LEFT" marginLeft="20"/>
                        <m:MaterialImage url="https://s3.amazonaws.com/uifaces/faces/twitter/tonymillion/128.jpg" width="40px" shadow="1" height="40px" circle="true" float="LEFT" marginLeft="20"/>
                        <m:MaterialImage url="https://s3.amazonaws.com/uifaces/faces/twitter/tonymillion/128.jpg" width="40px" shadow="1" height="40px" circle="true" float="LEFT" marginLeft="20"/>
                    </m:MaterialRow>
                    <m:MaterialDivider width="100%" height="2px"/>
                    <!-- Brief info -->
                    <m:MaterialRow marginTop="20">
                        <m:MaterialColumn grid="l4">
                            <m:MaterialLabel text="Type" fontWeight="BOLD"/>
                            <m:MaterialLabel text="Size" fontWeight="BOLD"/>
                            <m:MaterialLabel text="Storage used" fontWeight="BOLD"/>
                            <m:MaterialLabel text="Owner" fontWeight="BOLD"/>
                            <m:MaterialLabel text="Modified" fontWeight="BOLD"/>
                            <m:MaterialLabel text="Opened" fontWeight="BOLD"/>
                            <m:MaterialLabel text="Created" fontWeight="BOLD"/>
                        </m:MaterialColumn>
                        <m:MaterialColumn grid="l8">
                            <m:MaterialLabel text="Google Docs" truncate="true"/>
                            <m:MaterialLabel text="-" truncate="true"/>
                            <m:MaterialLabel text="0 bytes" truncate="true"/>
                            <m:MaterialLabel text="John Doe" truncate="true"/>
                            <m:MaterialLabel text="December 20, 1990" truncate="true"/>
                            <m:MaterialLabel text="December 20, 1990" truncate="true"/>
                            <m:MaterialLabel text="December 20, 1990" truncate="true"/>
                        </m:MaterialColumn>
                    </m:MaterialRow>
                </m:MaterialPanel>
            </m:MaterialRow>
        </m:MaterialContainer>

    </m:MaterialPanel>
</ui:UiBinder>
