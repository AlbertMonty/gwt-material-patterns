<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:m='urn:import:gwt.material.design.client.ui'
             xmlns:ma="urn:import:gwt.material.design.addins.client"
>
    <ui:style gss="true">
        body {
            background: #e9e9e9;
        }
    </ui:style>
    <m:MaterialPanel>
        <m:MaterialHeader ui:field="header">
            <m:MaterialNavBar ui:field="navBar" activates="sidenavMultiple" backgroundColor="BLUE" shadow="1">
                <m:MaterialNavBrand paddingLeft="60" text="gwt-material" />
                <m:MaterialNavSection float="RIGHT" showOn="SHOW_ON_LARGE">
                    <m:MaterialNavMenu activates="sidenav2" iconType="MENU" />
                </m:MaterialNavSection>
            </m:MaterialNavBar>

            <m:MaterialSideNav m:id="sidenavMultiple" edge="LEFT">
                <ma:sideprofile.MaterialSideProfile url="http://static1.squarespace.com/static/51609147e4b0715db61d32b6/521b97cee4b05f031fd12dde/5519e33de4b06a1002802805/1431718693701/?format=1500w">
                    <m:MaterialImage url="http://b.vimeocdn.com/ps/339/488/3394886_300.jpg" />
                    <m:MaterialLabel text="GWT Material" textColor="WHITE"/>
                    <m:MaterialLink text="gwt-material@gmail.com" activates="dropProfile" iconType="ARROW_DROP_DOWN" iconPosition="RIGHT" textColor="WHITE"/>
                </ma:sideprofile.MaterialSideProfile>
                <m:MaterialLink iconType="INBOX" text="Inbox">
                    <m:MaterialBadge text="1 new" />
                </m:MaterialLink>
                <m:MaterialLink iconType="SEND" text="Send Mail"/>
                <m:MaterialLink iconType="DRAFTS" text="Drafts"/>
                <m:MaterialLink iconType="MAIL" text="All Mail"/>
                <m:MaterialLink iconType="DELETE" text="Trash"/>
                <m:MaterialLink iconType="INFO_OUTLINE" text="Spam"/>
            </m:MaterialSideNav>

            <m:MaterialSideNavDrawer m:id="sidenav2" edge="RIGHT" width="300" withHeader="true" showOnAttach="false"
                                     closeOnClick="true" allowBodyScroll="true" alwaysShowActivator="true">
                <m:MaterialLink iconType="INBOX" text="Inbox">
                    <m:MaterialBadge text="1 new" />
                </m:MaterialLink>
                <m:MaterialLink iconType="SEND" text="Send Mail"/>
                <m:MaterialLink iconType="DRAFTS" text="Drafts"/>
                <m:MaterialLink iconType="MAIL" text="All Mail"/>
                <m:MaterialLink iconType="DELETE" text="Trash"/>
                <m:MaterialLink iconType="INFO_OUTLINE" text="Spam"/>
            </m:MaterialSideNavDrawer>
        </m:MaterialHeader>

        <m:MaterialContainer>
            <m:MaterialRow textAlign="CENTER" paddingTop="40">
                <m:MaterialImage url="http://i.imgur.com/7JpG0F4.gif" />
                <m:MaterialFAB ui:field="fab">
                    <m:MaterialButton type="FLOATING" href="https://github.com/GwtMaterialDesign/gwt-material-patterns/blob/release_2.0/src/main/java/com/github/gwtmaterialdesign/client/application/sidenavcard/CardSideNavView.ui.xml" target="_blank" backgroundColor="PINK" size="LARGE" iconType="CODE" />
                </m:MaterialFAB>
            </m:MaterialRow>
        </m:MaterialContainer>
    </m:MaterialPanel>
</ui:UiBinder>
