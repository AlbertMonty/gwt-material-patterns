<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m='urn:import:gwt.material.design.client.ui'
             xmlns:ma="urn:import:gwt.material.design.addins.client"
>
    <ui:style gss="true">
        body {
            background: #e9e9e9;
        }
    </ui:style>
    <m:MaterialPanel>
        <m:MaterialHeader ui:field="header">
            <m:MaterialNavBar activates="sidenav" backgroundColor="BLUE" shadow="1">
                <m:MaterialNavBrand paddingLeft="60" text="gwt-material" />
            </m:MaterialNavBar>
            <m:MaterialMiniSideNav m:id="sidenav" ui:field="sideNav" width="300" expandable="true" expandOnClick="true">
                <m:MaterialLink iconType="INBOX" text="Inbox">
                    <m:MaterialBadge text="1 new" />
                </m:MaterialLink>
                <m:MaterialLink iconType="SEND" text="Send Mail"/>
                <m:MaterialLink iconType="DRAFTS" text="Drafts"/>
                <m:MaterialLink iconType="MAIL" text="All Mail"/>
                <m:MaterialLink iconType="DELETE" text="Trash"/>
                <m:MaterialLink iconType="INFO_OUTLINE" text="Spam"/>
            </m:MaterialMiniSideNav>
        </m:MaterialHeader>

        <m:MaterialContainer textAlign="CENTER">
            <m:MaterialTitle title="Material Card SideNav" description="Card SideNav is an extension to MaterialSideNav that provides a card container to it's sidenav links. Good for few sidenav link items." />
            <m:MaterialFAB>
                <m:MaterialButton type="FLOATING" backgroundColor="PINK" size="LARGE" iconType="CODE" />
            </m:MaterialFAB>
        </m:MaterialContainer>
    </m:MaterialPanel>
</ui:UiBinder>
